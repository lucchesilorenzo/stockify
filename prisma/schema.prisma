generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  hashedPassword String
  firstName      String
  lastName       String
  dateOfBirth    DateTime?
  phoneNumber    String?
  bio            String?
  location       String?
  updatedAt      DateTime  @updatedAt
  createdAt      DateTime  @default(now())
}

model Order {
  id         String   @id @default(cuid())
  quantity   Int
  totalPrice Float
  subtotal   Float
  shipping   Float
  tax        Float
  status     String   @default("Pending")
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())
}

model Product {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  price       Float
  quantity    Int
  maxQuantity Int
  minQuantity Int
  description String?
  status      String   @default("Available")
  image       String?
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  order       Order[]
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[]
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
}

model Activity {
  id        String   @id @default(cuid())
  activity  String
  entity    String
  product   String
  createdAt DateTime @default(now())
}
